<%- include('../../partials/header') %>

    <div class="row">
        <h1 style="text-align: center;">Edit
            <%= camp.campDbName %>
        </h1>
        <div class="form">
            <form action="/camps/<%= camp._id %>/edit?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input class="form-control" type="text" name="campDbName" value="<%= camp.campDbName %>" autofocus required/>
                </div>
                <div class="form-group">
                    <label for="price">Price/Nt</label>
                    <input class="form-control" type="number" name="campDbPrice" value="<%= camp.campDbPrice %>" min="0.01" step="0.01" required/>
                </div>
                <div class="form-group">
                    <label for="image">Image</label>
                    <input class="form-control" type="text" id="image" name="campDbImage" value="<%= camp.campDbImage %>" required />
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <input class="form-control" type="text" name="campDbDescription" value="<%= camp.campDbDescription %>" required/>
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="campDbLocation" id="location" value="<%= camp.campDbLocation %>" required/>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/">Back to Campgrounds</a>
        </div>
    </div>

    <%- include('../../partials/footer') %>
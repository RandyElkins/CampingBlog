<%- include('../../partials/header') %>

    <header class="jumbotron">
        <!-- <div class="container"> -->
        <h1>Welcome to the Get-Outside (GO) Camping Blog!</h1>
        <p>View our hand-picked campgrounds from all over the world</p>
        <p>
            <a class="btn btn-primary btn-lg" href="/camps/new">Add New Campground</a>
            <% if (!user) { %>
                <a href="/auth/google">Login with Google to Add New Campgrounds</a>
                <% } %>
        </p>
        <!-- </div> -->
    </header>

    <div class="row text-center" style="display: flex; flex-wrap: wrap;">
        <% context.camps.forEach((camp, idx) => { %>
            <%console.log('camp', camp);%>
                <div class="col-md-3 col-sm-6">
                    <div class="thumbnail">
                        <!-- <img src="https://res.cloudinary.com/djxlykr6h/image/upload/v1603687197/familyAtBaker_g123n8.jpg"> -->
                        <img src="<%= camp.campDbImage %>">
                        <div class="caption">
                            <h4 class="pull-left">
                                <!-- Beautiful Baker -->
                                <%= camp.campDbName %>
                            </h4>
                            <h4 class="pull-right">$
                                <%= camp.campDbPrice %>
                                    /nt</h4>
                        </div>
                        <p>
                            <a href="/camp/<%= camp._id %>" class="btn btn-primary">More Info</a>
                        </p>
                    </div>
                </div>
                <% }); %>
    </div>

    <%- include('../../partials/footer') %>